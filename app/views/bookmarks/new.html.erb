<h1>Add a Bookmark</h1>

<%= form_for [@list, @bookmark] do |f| %>
  <div>
    <%= f.label :movie_id %>
    <%= f.collection_select :movie_id, Movie.all, :id, :title %>
  </div>

  <div>
    <%= f.label :comment %>
    <%= f.text_area :comment %>
  </div>

  <%= f.submit "Add Bookmark" %>
<% end %>

<%= link_to "Back to List", list_path(@list) %>
