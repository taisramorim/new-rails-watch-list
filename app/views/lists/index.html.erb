<div class="container mt-4">
  <!-- Banner Image -->
  <img src="<%= asset_path('image.png') %>" class="img-fluid mb-4" alt="Banner Image">

  <h1 class="text-center mb-4">Save any kind of movies</h1>

  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <img src="https://source.unsplash.com/random" class="card-img-top" alt="List Image">
          <div class="card-body">
            <h5 class="card-title"><%= list.name %></h5>
            <%= link_to "View List", list_path(list), class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="text-center">
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-success" %>
  </div>
</div>
