<div class="container mt-5">
  <div class="jumbotron">
    <h1 class="display-4"><%= @list.name %></h1>
  </div>

  <div class="card mb-4">
    <!-- Use the Unsplash link as the image source -->
    <img src="https://source.unsplash.com/random" class="card-img-top" alt="List Image">
  </div>

  <h2 class="mb-4">Add a Movie</h2>
  <%= simple_form_for [@list, @bookmark], html: { class: 'mb-4' } do |f| %>
    <div class="form-group">
      <%= f.label :movie_id, "Select a Movie" %>
      <%= f.select :movie_id, options_for_select(Movie.all.map { |m| [m.title, m.id] }), {}, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :comment, "Comment" %>
      <%= f.text_area :comment, class: 'form-control' %>
    </div>
    <%= f.button :submit, class: "btn btn-primary" %>
  <% end %>

  <!-- Display existing bookmarks -->
  <div class="mt-4">
    <h2>Bookmarks</h2>
    <ul class="list-group">
      <% @list.bookmarks.each do |bookmark| %>
        <li class="list-group-item">
          <% if bookmark.movie.present? %>
            <div class="d-flex justify-content-between align-items-center">
              <span><%= "#{bookmark.movie.title} - #{bookmark.comment}" %></span>
              <%= link_to "Delete", bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
            </div>
          <% else %>
            <%= link_to "Back to Lists", lists_path, class: 'btn btn-warning mt-3' %>
          <% end %>
        </li>
      <% end %>
    </ul>

  </div>
</div>
